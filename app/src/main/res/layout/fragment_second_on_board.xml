<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B6B0D5"
    tools:context=".ui.onboarding.pages.SecondOnBoard">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/backToFirstButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        android:rotationY="180"
        app:lottie_loop="true"
        app:lottie_colorFilter="@color/white"
        app:lottie_rawRes="@raw/right_arrow" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nextToThirdButton"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_colorFilter="@color/white"
        app:lottie_rawRes="@raw/right_arrow" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/wine_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dog_wine" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:lineSpacingExtra="4dp"
        android:text="Weâ€™re all about giving you a legendary drinking experience."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wine_dog" />


</androidx.constraintlayout.widget.ConstraintLayout>